@model ReflectionIT.Mvc.Paging.PagingList<ClickBurger.Models.Hamburguer>

@{
    ViewData["Title"] = "Index";
}

<h1>Hamburgueres</h1>

<form method="get" class="form-inline">

    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
         

    <button  type="submit" class="btn btn-info"> Procurar</button>
  
</form>
<br />

Total de Lanches : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create">Criar hamburguer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsHamburguerPreferido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsHamburguerPreferido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmEstoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HamburguerId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.HamburguerId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.HamburguerId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
