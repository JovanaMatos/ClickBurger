@model ReflectionIT.Mvc.Paging.IPagingList<ClickBurger.Models.Pedido>


@{
    ViewData["Title"] = "Index";
}
<h3>Pedidos</h3>

<form method="get" class="form-inline">

    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />

    <button type="submit" class="btn btn-info">Procurar</button>
</form>

Total de Pedidos : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a asp-action="Create">Criar novo Pedido</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Sobrenome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Endereco1)</th>
            <th>@Html.DisplayNameFor(model => model.First().Endereco2)</th>
            <th>@Html.DisplayNameFor(model => model.First().Cep)</th>
            <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
            <th>@Html.DisplayNameFor(model => model.First().Cidade)</th>
            <th>@Html.DisplayNameFor(model => model.First().Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().PedidoEnviado)</th>
            <th>@Html.DisplayNameFor(model => model.First().PedidoEntregueEm)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEnviado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PedidoId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.PedidoId">Deletar</a> |
                    <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Ver Itens</a>
                </td>
            </tr>
        }
    </tbody>
</table>